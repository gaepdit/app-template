@page "{id:Guid?}"
@using MyApp.WebApp.Pages.Shared.EditorTemplates
@model EditModel
@{
    ViewData["Title"] = "Edit Customer";
    ViewData["NoAnchors"] = "True";
}

<h1>@ViewData["Title"]</h1>

<div class="p-3 border rounded-3 bg-light-subtle">
    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <div class="mb-1">
            <h2 class="visually-hidden">Customer Details</h2>

            <div class="row">
                <div class="col-md-6 col-lg-4 mb-3">
                    @Html.EditorFor(e => e.Item.Name, EditorTemplate.Input)
                </div>
                <div class="col-md-6 col-lg-4 mb-3">
                    @Html.EditorFor(e => e.Item.County, EditorTemplate.SelectOptional, new { Items = Model.CountiesSelectList })
                </div>
                <div class="col-md-12 col-lg-4 mb-3">
                    <div class="form-floating mb-3">
                        @Html.EditorFor(e => e.Item.Website, EditorTemplate.Input)
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                @Html.EditorFor(e => e.Item.Description, EditorTemplate.Textarea, new { Rows = 3 })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <h3 class="h5">
                    Site Mailing Address <small class="text-body-secondary">(optional)</small>
                </h3>
                <div class="mb-3">
                    @Html.EditorFor(e => e.Item.MailingAddress.Street, EditorTemplate.Input)
                </div>
                <div class="mb-3">
                    @Html.EditorFor(e => e.Item.MailingAddress.Street2, EditorTemplate.Input)
                </div>
                <div class="mb-3">
                    @Html.EditorFor(e => e.Item.MailingAddress.City, EditorTemplate.Input)
                </div>
                <div class="input-group">
                    @Html.EditorFor(e => e.Item.MailingAddress.State, EditorTemplate.SelectOptional, new { Items = Model.StatesSelectList })
                    @Html.EditorFor(e => e.Item.MailingAddress.PostalCode, EditorTemplate.Input)
                </div>
            </div>
        </div>

        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-primary col-6 col-sm-4 col-lg-3 me-2">Save Changes</button>
            <a asp-page="Details" asp-route-id="@Model.Item.Id.ToString()" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <div class="text-danger-emphasis mt-3">* denotes a required field</div>
        <input asp-for="Item.Id" type="hidden" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
